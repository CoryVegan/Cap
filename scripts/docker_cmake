#!/bin/bash
EXTRA_ARGS=$@
ARGS=(
    -D CMAKE_BUILD_TYPE=Debug
    -D BUILD_SHARED_LIBS=ON
    -D CMAKE_CXX_FLAGS="-Wall -Wextra -Wpedantic -Weffc++"
    -D ENABLE_PYTHON=ON
    -D BOOST_DIR=$BOOST_DIR
    -D ENABLE_DEAL_II=ON
    -D DEAL_II_DIR=$DEAL_II_DIR
    -D ENABLE_FORMAT=ON
    )
cmake "${ARGS[@]}" $EXTRA_ARGS $CAP_DIR
